{% extends 'base.html.twig' %}

{% block body %}
    <h1>Event list</h1>

        <div class="event">
        {% for event in events %}
            <div class="media">
                <div class="media-body"><img src="{{ event.picture }}" class="class circle-responsive-img"/>
                    <h4 class="media-heading">{{ event.title }}</h4>
                    <a href="{{ path('event_show', { 'id': event.id }) }}"><span class="badge">{{ event.id }}</span></a>
                    {{ event.name }}
                    {{ event.price }}
                    <a href="{{ path('event_show', { 'id': event.id }) }}"><span class="glyphicon glyphicon-eye-open" alt="Afficher" title="Afficher"></span></a> <a href="{{ path('event_edit', { 'id': event.id }) }}" class="glyphicon glyphicon-pencil" alt="Modifier" title="Modifier"></a></div>
                </div>
            </div>

        {% endfor %}

            <div><a href="{{ path('event_new') }}" class="add"><span class="glyphicon glyphicon-plus-sign" alt="Ajoutez votre événement" title="Ajoutez votre événement"></span>Ajoutez votre événement</a></div>
        </div>
{% endblock %}


