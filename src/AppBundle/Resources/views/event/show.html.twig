{% extends 'base.html.twig' %}

{% block body %}
    <h1>Evénement</h1>

    <div class="col s12 m8 offset-m2 l6 offset-l3">
        <div class="card-panel grey lighten-5 z-depth-1">
            <div class="row valign-wrapper">
                <div class="col s2">
                    <img src="{{ event.picture }}" class="class circle-responsive-img"/>
                </div>
                <div class="col s10">
              <span class="black-text">
                  {{ event.title }}<br />
                  {{ event.name }}<br />
                  {{ event.price }}<br />
              <a href="{{ path('event_index') }}"><span class="glyphicon glyphicon-arrow-left" alt="Retour à la liste des événements" title="Retour à la liste des événements"></span></a>  <a href="{{ path('event_edit', { 'id': event.id }) }}"><span class="glyphicon glyphicon-pencil" alt="Modifier" title="Modifier"></span></a>
              </span>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
